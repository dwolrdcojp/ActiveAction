<p id="notice"><%= notice %></p>

<h1>Downtimes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Shift</th>
      <th>Area</th>
      <th>Line</th>
      <th>Equipment</th>
      <th>Start time</th>
      <th>Stop time</th>
      <th>Downtime</th>
      <th>Reason code</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @downtimes.each do |downtime| %>
      <tr>
        <td><%= downtime.date %></td>
        <td><%= downtime.shift %></td>
        <td><%= downtime.area %></td>
        <td><%= downtime.line %></td>
        <td><%= downtime.equipment %></td>
        <td><%= downtime.start_time %></td>
        <td><%= downtime.stop_time %></td>
        <td><%= downtime.downtime %></td>
        <td><%= downtime.reason_code %></td>
        <td><%= downtime.comment %></td>
        <td><%= link_to 'Show', downtime %></td>
        <td><%= link_to 'Edit', edit_downtime_path(downtime) %></td>
        <td><%= link_to 'Destroy', downtime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Downtime', new_downtime_path %>
